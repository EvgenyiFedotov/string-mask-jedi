{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./src",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext", "es2016", "es2015"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "types": ["jest"]
  },
  "exclude": [
    "./typings",
    "types",
    "node_modules",
    "./tests",
    "./**/*.stories.tsx",
    "stories"
  ]
}
